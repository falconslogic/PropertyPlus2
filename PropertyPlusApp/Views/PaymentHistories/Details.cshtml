@model PropertyPlusApp.Models.PaymentHistory

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Payment History</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPayments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPayments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPaid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPaid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalLate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalLate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalMonths)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalMonths)
        </dd>
    </dl>
</div>

@if (User.IsInRole("Admin"))
{
<div>
    <a asp-action="Edit" asp-route-id="@Model.PaymentId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.PaymentId">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
}
else if (User.IsInRole("Basic"))
{
    <div>        
        <a asp-action="Index">Back to List</a>
    </div>
}


<hr>
<h4>Payment History of the Leaser</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Property)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Leaser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leaser.LastName)
                </td>

            </tr>
        }
    </tbody>
</table>
