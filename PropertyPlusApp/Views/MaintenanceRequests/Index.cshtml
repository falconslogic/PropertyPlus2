@model IEnumerable<PropertyPlusApp.Models.MaintenanceRequest>

@{
    ViewData["Title"] = "Maintenance Request";
}

<h1>Maintenance Request</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Documents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaintenanceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaintenanceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaintenanceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
